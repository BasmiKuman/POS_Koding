{
  "name": "pos-system",
  "version": "1.0.0",
  "description": "Complete Point of Sale System with Web and Mobile PWA interfaces",
  "main": "server.js",
  "scripts": {
    "start": "node server.js",
    "dev": "nodemon server.js",
    "test": "echo \"Error: no test specified\" && exit 1",
    "backup": "node scripts/backup.js",
    "seed": "node scripts/seed.js",
    "reset-db": "rm -f database/*.db && npm start",
    "lint": "eslint .",
    "format": "prettier --write .",
    "build": "echo \"Build completed\"",
    "deploy": "pm2 start server.js --name pos-system",
    "stop": "pm2 stop pos-system",
    "restart": "pm2 restart pos-system",
    "logs": "pm2 logs pos-system"
  },
  "keywords": [
    "pos",
    "point-of-sale",
    "retail",
    "inventory",
    "sales",
    "pwa",
    "mobile",
    "nodejs",
    "express",
    "sqlite"
  ],
  "author": "POS System Team",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/BasmiKuman/POS_Koding.git"
  },
  "bugs": {
    "url": "https://github.com/BasmiKuman/POS_Koding/issues"
  },
  "homepage": "https://github.com/BasmiKuman/POS_Koding#readme",
  "engines": {
    "node": ">=14.0.0",
    "npm": ">=6.0.0"
  },
  "dependencies": {
    "express": "^4.18.2",
    "sqlite3": "^5.1.6",
    "bcryptjs": "^2.4.3",
    "jsonwebtoken": "^9.0.2",
    "cors": "^2.8.5",
    "helmet": "^7.0.0",
    "express-rate-limit": "^6.10.0",
    "express-validator": "^7.0.1",
    "multer": "^1.4.5-lts.1",
    "dotenv": "^16.3.1",
    "morgan": "^1.10.0",
    "compression": "^1.7.4"
  },
  "devDependencies": {
    "nodemon": "^3.0.1",
    "eslint": "^8.45.0",
    "prettier": "^3.0.0"
  }
}
